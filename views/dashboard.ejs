<%- include('z/headtag-dashio'); -%>
<section id="container">
<%- include('z/header-dashio'); -%>
<aside>
                <div id="sidebar" class="nav-collapse ">
                    <!-- sidebar menu start -->

                        <ul id="nav-accordion" class="sidebar-menu">
                        <p class="centered">
                            <a href="/profile/<%=info.id%>"><img class="img-circle" src="/img/<%=info.user.name%>.png" width="80"/>
                            </a>
                        </p>

                        <h5 class="centered">
                            <%= info.name %>
                        </h5>

                        <li class="mt">
                            <a class="active" href="/dashboard/<%=info.id%>">
                                <span>Dashboard</span>
                            </a>
                        </li>

                        <li>
                            <a href="/findmentors/<%=info.id%>">
                                <span>Find Mentors</span>
                            </a>
                        </li>

                        <li>
                            <a href="/mygoals/<%=info.id%>">
                                <span>Goals</span>
                            </a>
                        </li>



                        <li>
                            <a href="/myquizzes/<%=info.id%>">
                                <span>Quizzes</span>
                            </a>
                        </li>

                        <li>
                            <a href="/mymentors/<%=info.id%>">
                                <span>My Mentors</span>
                            </a>
                        </li>
                        <li>
                            <a href="/chatroom/<%=info.id%>">
                                <span>Chat Room</span>
                            </a>
                        </li>

                        <li><a href="#"><span>Events</span></a></li>
                    </ul>

                    <!-- sidebar menu end -->
                </div>
</aside>

            <section id="main-content">
                <section class="wrapper">
                    <div class="row">
                        <div>
                            <section class="overview">
                                <h3 style="margin:20px;">Welcome to MentorMe</h3>

                               

                                <div class="detailed content-panel">
                                    <h4>My Stats</h4>

                                    <div class="row centered mt mb">
                                        <div class="col-sm-4">
                                            <h1><i class="fa fa-user"></i></h1>

                                            <h3>
                                                <%= info.user.myMentors.length %>
                                            </h3>

                                            <h5>MENTORS</h5>
                                        </div>



                                        <div class="col-sm-4">
                                            <h1><i class="fa fa-trophy"></i></h1>

                                            <h3>
                                                <%= info.user.myGoals.length %>
                                            </h3>

                                            <h5>GOALS ACHIEVED</h5>
                                        </div>

                                        <div class="col-sm-4">
                                            <h1><i class="fa fa-list-ol"></i></h1>

                                            <h3>
                                                <%=info.user.quizzes.length %>
                                            </h3>

                                            <h5>QUIZZES TAKEN</h5>
                                        </div>
                                    </div>
                                </div>
                            </section>

                            <div class="col-lg-12 ">
                                <section class="Goals Quizzes">
                                    <div class="row upper-row">
                                        <div class="col-lg-6 col-sm-12 mb">
                                            <h3>Goals to achieve</h3>

                                            <div class="content-panel pn text-center">
                                                
                                                 <%var l=0; if(info.user.pendingGoals.length===0){%>
                                                 <div class="row text-center" style="width:90%;margin-top:0; margin:10px 5%; background-color: azure; ">
                                                      <div ><h4>You have no pending goals</h4></div>
                                                 </div>
                                                 <%}else{%>
                                                  <%if(info.user.pendingGoals.length<5){l=info.user.pendingGoals.length;} else{l=4; }%>
                                                  <%for(var i=0;i<l;i++){%>
                                                      <div class="row" style="width:90%;margin-top:0; margin:1px 5%; background-color:#37b2ca6b; ">
                                                           <div class="col-lg-4" style="text-align: left;"><h4> BY : <%=info.user.pendingGoals[i].by %></h4></div>
                                                           <div class="col-lg-8" style="text-align: left;"><h4><%=info.user.pendingGoals[i].goal%></h4></div>
                                                      </div>
                                                  <%}}%>
                                                  <div class="row text-center" style="margin:1% auto; display:inline-block; padding:5px 10px; background-color:#ed5565; border-radius: 5px;">
                                                    <a href="/mygoals/<%=info.id%>" style="color: cornsilk;">Show All</a>
                                                  </div>     
                                            </div>


                                           

                                            <!-- /content-panel -->
                                        </div>

                                        <div class="col-lg-6 col-sm-12 mb">
                                            <h3>Quizzes to take</h3>

                                            <div class="content-panel pn text-center">
                                                <%var l=0; if(info.user.pendingQuizzes.length===0){%>
                                                <div class="row text-center" style="width:90%;margin-top:0; margin:10px 5%; background-color: azure; ">
                                                     <div ><h4>You have no pending quizzes</h4></div>
                                                </div>                                                                <%}else{%>
                                                <%if(info.user.pendingQuizzes.length<5){l=info.user.pendingQuizzes.length;} else{l=4; }%>
                                                <%for(var i=0;i<l;i++){%>
                                                     <div class="row" style="width:90%;margin-top:0; margin:1px 5%; background-color:#37b2ca6b;  ">
                                                               <div class="col-lg-4" style="text-align: left;"><h4> BY :<%=info.user.pendingQuizzes[i].by_name %> </h4></div>
                                                               <div class="col-lg-8" style="text-align: left;"><h4><%=info.user.pendingQuizzes[i].title%></h4></div>
                                                      </div>
                                                <%}}%>
                                                <div class="row text-center" 
                                                  style="margin:2% auto; display:inline-block; padding:5px 10px; background-color:#ed5565; border-radius: 5px;;"
                                                  >
                                                    <a href="/myquizzes/<%=info.id%>" style="color: cornsilk;">Show All</a>
                                                </div>                              
                                                       
                                            </div>



                                            <!-- /content-panel -->
                                        </div>
                                    </div>

                                    
                                </section>



                                <section class="Mentors text-center">
                                    <h3 style="text-align: left;">My Mentors</h3>

                                    <div class="row">
                                        <%var l=0; if(info.user.myMentors.length===0){%>
                                            <h5 class="text-center">********* You have no Mentors *********</h5>
                                            <%}else{%>
                                                <%if(info.user.myMentors.length<4){l=info.user.myMentors.length;} else{l=3; }%>
                                                    <%for(var i=0;i<l;i++){%>
                                                        <div class="col-lg-4 col-md-4 col-sm-4 mb" name="mentorcard">
                                                            <div class="weather-2 pn" style="background:#fff">
                                                                <div class="row centered" style="padding:10px 0;">
                                                                    <img class="img-circle" src="/img/<%= info.user.myMentors[i].name %>.png" style="height:100px;width:100px" />
                                                                </div>

                                                                <div class="weather-2-header" style="background-color: #37b2ca6b;">
                                                                    <div class="row">
                                                                        <div class=" text-center" style="color:#000">
                                                                            <h4>
                                                                                <%= info.user.myMentors[i].name %>
                                                                            </h4>
                                                                        </div>
                                                                    </div>


                                                                </div>

                                                                <div class="row data centered " style="padding:10px 10px">
                                                                    <a href="/viewmentorprofile/<%=info.id %>/<%= info.user.myMentors[i].id %>" class=" btn btn-theme" style="padding:0; text-align: center;">
                                                                        <h5 style="padding:10px 5px 0;">View Profile</h5>
                                                                    </a>

                                                                </div>

                                                            </div>
                                                        </div>

                                                        <% } }%>


                                                        


                                    </div>
                                    <div class="row text-center" style="margin:0 auto; display:inline-block; padding:5px 10px; background-color:#ed5565; border-radius: 5px;;">
                                        <a href="/mymentors/<%=info.id%>" style="color: cornsilk;">Show All</a>
                                    </div> 
                                    
                                </section>
                            </div>
                        </div>

                        <!-- /row -->
                    </div>
                </section>
            </section>

            <%- include('z/footer-dashio'); -%>
    </section>

    <%- include('z/scripts-dashio'); -%>